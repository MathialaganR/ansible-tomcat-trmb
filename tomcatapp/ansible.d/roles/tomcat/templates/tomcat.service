[Unit]
Description = Apache Tomcat 8
After = syslog.target network.target
[Service]
User = tomcat
Group = tomcat
Type = oneshot
PIDFile =/usr/local/apache-tomcat-8.5.9/tomcat.pid
RemainAfterExit = yes
ExecStart =/usr/local/apache-tomcat-8.5.9/bin/startup.sh
ExecStop =/usr/local/apache-tomcat-8.5.9/bin/shutdown.sh
ExecReStart =/usr/local/apache-tomcat-8.5.9/bin/shutdown.sh;/usr/local/apache-tomcat-8.5.9/bin/startup.sh
[Install]
WantedBy = multi-user.target